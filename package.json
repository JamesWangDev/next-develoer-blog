    "next": "^12.2.5",
    "next-contentlayer": "^0.2.7",
    "next-themes": "0.2.0",
    "react": "18.2.0",
    "react-compare-image": "^3.1.0",
    "react-dom": "18.2.0",
    "react-palette": "^1.0.2",
