{
  "name": "jahir.dev",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rimraf .next && rimraf dist && rimraf out && rimraf .contentlayer",
    "predev": "yarn clean && prisma generate && contentlayer build --clearCache",
    "prebuild": "yarn predev && yarn find:unused",
    "postbuild": "cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs && node ./scripts/generate-sitemap.mjs",
    "update-deps": "npx --yes npm-check-updates -u && yarn",
    "analyze": "cross-env ANALYZE=true NODE_ENV=production next build && node scripts/analyze-bundles.js",
    "find:unused": "next-unused"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mdi/js": "^6.6.96",
    "@mdi/react": "^1.5.0",
    "@prisma/client": "^3.12.0",
    "canvas-confetti": "^1.5.1",
    "classnames": "^2.3.1",
    "colord": "^2.9.2",
    "contentlayer": "0.2.1",
    "next": "12.1.4",
    "next-contentlayer": "0.2.1",
    "next-themes": "^0.0.15",
    "preact": "10.7.1",
    "react": "^17.0.2",
    "react-compare-image": "^3.1.0",
    "react-dom": "^17.0.2",
    "react-palette": "^1.0.2",
    "swr": "^1.2.2",
    "use-lanyard": "^1.1.0",
    "use-sound": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@bpsmart/eslint-config-base": "^0.1.0",
    "@bpsmart/eslint-config-react": "^0.0.8",
    "@emotion/css": "^11.9.0",
    "@emotion/server": "^11.4.0",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@next/bundle-analyzer": "^12.1.4",
    "@types/canvas-confetti": "^1.4.2",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.1",
    "@types/remove-markdown": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "autoprefixer": "^10.4.4",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.7",
    "eslint": "^8.13.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "globby": "13.1.1",
    "image-size": "^1.0.1",
    "next-unused": "^0.0.6",
    "plaiceholder": "^2.3.0",
    "postcss": "^8.4.12",
    "postcss-calc": "^8.2.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0",
    "reading-time": "^1.5.0",
    "rehype": "^12.0.1",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.0.3",
    "rehype-prism-plus": "^1.3.2",
    "rehype-slug": "^5.0.1",
    "remark-gfm": "^3.0.1",
    "remove-markdown": "^0.3.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.30.3",
    "typescript": "^4.6.3",
    "xml": "^1.0.1"
  },
  "resolutions": {
    "preact": "10.6.2"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "next-unused": {
    "alias": {
      "~/components": "src/components",
      "contentlayer/generated": "./.contentlayer/generated"
    },
    "include": [
      "public",
      "src",
      "scripts"
    ],
    "exclude": [],
    "entrypoints": [
      "src/components/",
      "src/pages/"
    ]
  }
}
