{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "~/blocks/*": ["src/blocks/*"],
      "~/components/*": ["src/components/*"],
      "~/elements/*": ["src/elements/*"],
      "~/fonts/*": ["src/fonts/*"],
      "~/hooks/*": ["src/hooks/*"],
      "~/providers/*": ["src/providers/*"],
      "~/stories/*": ["src/stories/*"],
      "~/styles/*": ["src/styles/*"],
      "~/utils/*": ["src/utils/*"],
      "~/types/*": ["src/types/*"]
    }
  },
  "exclude": [".next", ".idea", "node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
